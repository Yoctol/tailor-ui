{
  "name": "@yoctol/ui",
  "version": "0.4.0",
  "main": "lib/index.js",
  "files": ["lib"],
  "scripts": {
    "build":
      "npm run clean && cross-env NODE_ENV=production babel src -d lib --ignore **/__tests__,**/__stories__ && cp -r ./src/Icon/icons/* ./lib/Icon/icons",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "deploy:storybook": "storybook-to-ghpages",
    "lint": "eslint bin src scripts examples",
    "lint:css": "stylelint './src/**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch",
    "preversion": "npm test"
  },
  "dependencies": {
    "grid-styled": "^4.1.0",
    "lodash": "^4.17.10",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "rc-checkbox": "^2.1.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-select": "^1.2.1",
    "recompose": "^0.27.0",
    "styled-components": "^3.2.6",
    "styled-normalize": "^4.0.0",
    "styled-system": "^2.2.5",
    "styled-tools": "^0.5.0"
  },
  "peerDependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-backgrounds": "^3.4.3",
    "@storybook/addon-centered": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "@storybook/storybook-deployer": "^2.3.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.3",
    "babel-plugin-styled-components": "^1.5.1",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-yoctol": "^0.16.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "prettier-package-json": "^1.6.0",
    "react-icons": "^2.2.7",
    "stylelint": "9.1.3",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^0.8.0",
    "stylelint-processor-styled-components": "^1.3.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": ["/node_modules/"],
    "testPathIgnorePatterns": ["/node_modules/", "lib"],
    "timers": "fake",
    "resetModules": true,
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "npm run lint:css", "git add"],
    "*.{json,md}": ["prettier --write", "git add"],
    "package.json": [
      "prettier-package-json --write",
      "prettier package.json --write",
      "git add"
    ],
    ".babelrc": ["prettier .babelrc --write", "git add"]
  }
}
