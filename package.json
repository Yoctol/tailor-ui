{
  "name": "tailor-ui",
  "description": "A bespoke UI collection for building web application.",
  "license": "MIT",
  "homepage": "https://tailor-ui.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoctol/tailor-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yoctol/tailor-ui/issues"
  },
  "version": "0.2.7",
  "main": "lib/index.umd.js",
  "module": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:js && npm run build:esm",
    "build:esm": "rollup -c",
    "build:js": "cross-env NODE_ENV=production babel src -d lib --extensions '.ts,.tsx' --ignore **/__tests__",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf lib",
    "commit": "git-cz",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:css",
    "lint:css": "stylelint './src/**/*.tsx'",
    "lint:es": "eslint src --ext=ts,tsx --fix",
    "lint:staged": "lint-staged && npm run type-check",
    "lint:ts": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "npm run build",
    "test": "npm run lint && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "preversion": "npm test",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "@reach/observe-rect": "^1.0.3",
    "clean-tag": "^2.0.2",
    "html-tags": "^2.0.0",
    "immutable": "^3.7.4",
    "moment": "^2.24.0",
    "polished": "^2.3.3",
    "prop-types": "^15.6.2",
    "ramda": "^0.26.1",
    "rc-calendar": "^9.7.11",
    "rc-editor-mention": "1.1.7",
    "rc-time-picker": "^3.4.0",
    "react-dropzone": "^7.0.1",
    "react-html-attributes": "^1.4.3",
    "react-select": "^2.3.0",
    "react-spring": "^7.2.10",
    "react-textarea-autosize": "^7.1.0",
    "styled-normalize": "^8.0.4",
    "styled-system": "^3.2.1"
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha.2",
    "react-dom": ">=16.7.0-alpha.2",
    "react-icons": ">=3.2.0",
    "styled-components": ">=4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.13",
    "@types/ramda": "^0.25.47",
    "@types/react": "16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-select": "^2.0.11",
    "@types/styled-components": "4.0.3",
    "@types/styled-system": "^3.1.3",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.3",
    "babel-plugin-ramda": "^2.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-typescript-to-proptypes": "^0.16.0",
    "commitizen": "^3.0.5",
    "conventional-changelog-cli": "^2.0.11",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "eslint": "^5.12.1",
    "eslint-config-yoctol": "^0.20.0",
    "eslint-import-resolver-babel-module": "^5.0.0",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^0.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "prettier-package-json": "^2.0.1",
    "react": "^16.8.0-alpha.0",
    "react-dom": "^16.8.0-alpha.0",
    "react-icons": "^3.3.0",
    "react-testing-library": "^5.4.4",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "styled-components": "^4.1.3",
    "stylelint": "9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^1.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "3.1.6",
    "typescript-eslint-parser": "22.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "typings": "lib/index.d.ts"
}
