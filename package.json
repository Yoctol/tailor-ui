{
  "name": "@yoctol/ui",
  "version": "1.6.2",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production babel src -d lib --ignore **/__tests__,**/__stories__",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint './src/**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "lint:js": "eslint src",
    "lint:staged": "lint-staged",
    "prepublishOnly": "npm run build",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch",
    "preversion": "npm test"
  },
  "dependencies": {
    "polished": "^1.9.3",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "rc-checkbox": "^2.1.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-icons": "^2.2.7",
    "react-powerplug": "^1.0.0-rc.1",
    "react-select": "^2.0.0",
    "react-spring": "^5.5.1",
    "react-textarea-autosize": "^7.0.4",
    "styled-components": "^3.3.3",
    "styled-normalize": "^8.0.0",
    "styled-system": "^3.0.2",
    "styled-tools": "^1.0.0",
    "stylelint-config-prettier": "^3.3.0"
  },
  "peerDependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.55",
    "@babel/core": "^7.0.0-beta.55",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@babel/preset-react": "^7.0.0-beta.55",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-plugin-ramda": "^1.6.2",
    "babel-plugin-styled-components": "^1.5.1",
    "copy-to-clipboard": "^3.0.8",
    "cross-env": "^5.2.0",
    "docz": "^0.8.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-yoctol": "^0.18.0",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "jest-styled-components": "^5.0.1",
    "jsx-to-string": "^1.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "prettier-package-json": "^1.6.0",
    "react-element-to-jsx-string": "^14.0.1",
    "stylelint": "9.4.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^1.1.1",
    "stylelint-processor-styled-components": "^1.3.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "lib",
      "/test/"
    ],
    "moduleNameMapper": {
      "^test/(.*)": "<rootDir>/test/$1.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/configure-enzyme.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "timers": "fake",
    "resetModules": true,
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "stylelint",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "prettier --write",
      "git add"
    ],
    ".babelrc": [
      "prettier --parser json --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  }
}
