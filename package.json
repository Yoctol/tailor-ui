    "lodash.debounce": "^4.0.8",
    "polished": "^4.0.5",
    "ramda": "^0.27.1",
    "rc-picker": "^2.5.2",
    "react": "^17.0.1",
    "react-autosize-textarea": "^7.0.0",
    "react-dom": "^17.0.1",
    "react-dropzone": "11.2.4",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.1.0",
    "react-intl-tel-input": "^8.0.4",
    "react-spring": "^8.0.27",
    "react-virtual": "^2.3.2",
    "react-window": "^1.8.6",
    "resize-observer-polyfill": "^1.5.1",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5"
