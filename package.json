{
  "private": true,
  "name": "@tailor-ui/workspace",
  "description": "Tailor-UI's workspace package",
  "license": "MIT",
  "homepage": "https://tailor-ui.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoctol/tailor-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yoctol/tailor-ui/issues"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "yarn type-check && lerna run build",
    "clean": "yarn clean:lib && npx lerna clean",
    "clean:lib": "rimraf packages/**/{lib,*.tsbuildinfo}",
    "docs:build": "yarn workspace tailor-ui-website build",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:css": "stylelint './packages/**/*.tsx'",
    "lint:fix": "yarn lint:ts --fix && yarn lint:css",
    "lint:ts": "eslint . --ext=js,ts,tsx",
    "prerelease": "yarn clean && yarn && yarn test && yarn build",
    "release": "lerna publish --no-commit-hooks --conventional-commits",
    "start": "yarn workspace tailor-ui-website start",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest packages",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch",
    "type-check": "tsc --build tsconfig.build.json",
    "watch": "yarn type-check --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@react-spring/mock-raf": "^1.1.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/fuzzaldrin-plus": "^0.6.1",
    "@types/jest": "^26.0.10",
    "@types/lodash.debounce": "^4.0.6",
    "@types/ramda": "^0.27.14",
    "@types/react": "16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-window": "^1.8.2",
    "@types/styled-components": "5.1.2",
    "@types/styled-system": "^5.1.10",
    "@types/yup": "^0.29.6",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-ramda": "^2.0.0",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-plugin-typescript-to-proptypes": "^1.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-yoctol": "^0.25.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-typescript": "^0.14.0",
    "formik": "^2.1.5",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.0",
    "prettier-package-json": "^2.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-spring": "^8.0.27",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "styled-components": "^5.1.1",
    "stylelint": "13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^4.0.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-loader": "^8.0.3",
    "typescript": "4.0.2",
    "yup": "^0.29.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  }
}
