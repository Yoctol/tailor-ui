{
  "private": true,
  "name": "@tailor-ui/workspace",
  "description": "Tailor-UI's workspace package",
  "license": "MIT",
  "homepage": "https://tailor-ui.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoctol/tailor-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yoctol/tailor-ui/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "yarn type-check && lerna run build",
    "clean": "yarn clean:lib && npx lerna clean",
    "clean:lib": "git clean -dfqX -- **/lib/ **/*.tsbuildinfo",
    "docs:build": "docz build",
    "docs:dev": "docz dev",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:css": "stylelint './**/*.tsx'",
    "lint:fix": "yarn lint:ts --fix && yarn lint:css",
    "lint:ts": "eslint . --ext=js,ts,tsx",
    "prepack": "yarn build",
    "prepublishOnly": "yarn clean && yarn && yarn test",
    "release": "lerna publish --no-commit-hooks --conventional-commits",
    "start": "yarn docs:dev",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch",
    "type-check": "yarn clean:lib && tsc --build tsconfig.build.json",
    "watch": "yarn type-check --watch"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/react": "^8.0.1",
    "@types/fuzzaldrin-plus": "^0.6.0",
    "@types/jest": "^24.0.15",
    "@types/lodash.debounce": "^4.0.6",
    "@types/ramda": "^0.26.9",
    "@types/react": "16.8.20",
    "@types/react-dom": "^16.8.4",
    "@types/react-select": "^2.0.19",
    "@types/styled-components": "4.1.16",
    "@types/styled-system": "^4.2.1",
    "@types/yup": "^0.26.16",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-ramda": "^2.0.0",
    "babel-plugin-styled-components": "^1.10.1",
    "babel-plugin-typescript-to-proptypes": "^0.17.1",
    "cross-env": "^5.2.0",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "eslint": "^5.16.0",
    "eslint-config-yoctol": "^0.22.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "moment": "^2.24.0",
    "polished": "^3.4.1",
    "prettier": "^1.18.2",
    "prettier-package-json": "^2.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-icons": "^3.7.0",
    "react-spring": "^8.0.25",
    "rollup": "^1.15.6",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-size-snapshot": "^0.9.0",
    "styled-components": "^4.3.1",
    "stylelint": "10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^2.0.0",
    "stylelint-processor-styled-components": "^1.8.0",
    "typescript": "3.5.2",
    "yup": "^0.27.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  }
}
