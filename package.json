{
  "private": true,
  "name": "@yoctol/ui",
  "version": "0.0.1",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production babel src -d lib --ignore __tests__ --copy-files",
    "check": "flow check",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "lint": "eslint bin src scripts examples",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "prepublish": "npm run build",
    "test": "npm run lint:fix && npm run check && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch",
    "preversion": "npm test"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-yoctol": "^0.16.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "prettier-package-json": "^1.6.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "timers": "fake",
    "resetModules": true,
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "prettier package.json --write",
      "git add"
    ],
    ".babelrc": [
      "prettier .babelrc --write",
      "git add"
    ]
  }
}
