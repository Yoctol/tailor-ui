{
  "private": true,
  "name": "@tailor-ui/workspace",
  "description": "Tailor-UI's workspace package",
  "license": "MIT",
  "homepage": "https://tailor-ui.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoctol/tailor-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yoctol/tailor-ui/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "yarn type-check && lerna run build",
    "clean": "yarn clean:lib && npx lerna clean",
    "clean:lib": "rimraf packages/**/{lib,*.tsbuildinfo}",
    "deploy": "docusaurus deploy",
    "docs:build": "docusaurus build",
    "docusaurus": "docusaurus",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:css": "stylelint './packages/**/*.tsx'",
    "lint:fix": "yarn lint:ts --fix && yarn lint:css",
    "lint:ts": "eslint . --ext=js,ts,tsx",
    "prepack": "yarn build",
    "prepublishOnly": "yarn clean && yarn && yarn test",
    "release": "lerna publish --no-commit-hooks --conventional-commits",
    "start": "docusaurus start",
    "swizzle": "docusaurus swizzle",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest packages",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch",
    "type-check": "tsc --build tsconfig.build.json",
    "watch": "yarn type-check --watch"
  },
  "peerDependencies": {
    "react": ">=16.10.0",
    "react-dom": ">=16.10.0",
    "styled-components": ">=5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@docusaurus/core": "^2.0.0-alpha.40",
    "@docusaurus/preset-classic": "^2.0.0-alpha.40",
    "@docusaurus/theme-live-codeblock": "^2.0.0-alpha.39",
    "@react-spring/mock-raf": "^1.1.1",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^9.4.0",
    "@types/fuzzaldrin-plus": "^0.6.0",
    "@types/jest": "^24.0.25",
    "@types/lodash.debounce": "^4.0.6",
    "@types/ramda": "^0.26.39",
    "@types/react": "16.9.18",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "4.4.2",
    "@types/styled-system": "^4.2.2",
    "@types/yup": "^0.26.27",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-ramda": "^2.0.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-typescript-to-proptypes": "^1.1.0",
    "classnames": "^2.2.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-yoctol": "^0.23.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-typescript": "^0.14.0",
    "formik": "^2.1.2",
    "husky": "^4.2.0",
    "jest": "^25.1.0",
    "jest-styled-components": "^7.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.1",
    "moment": "^2.24.0",
    "polished": "^3.4.2",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-icons": "^3.8.0",
    "react-spring": "^8.0.27",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "styled-components": "^5.0.0",
    "stylelint": "13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^2.0.0",
    "stylelint-processor-styled-components": "^1.9.0",
    "ts-loader": "^6.2.1",
    "typescript": "3.7.5",
    "yup": "^0.28.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  }
}
