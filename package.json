{
  "private": true,
  "name": "@tailor-ui/workspace",
  "description": "Tailor-UI's workspace package",
  "license": "MIT",
  "homepage": "https://tailor-ui.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoctol/tailor-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yoctol/tailor-ui/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "git clean -dfqX -- ./node_modules **/{lib,node_modules}/",
    "docs:build": "docz build",
    "docs:dev": "docz dev",
    "postinstall": "yarn bootstrap",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:css": "stylelint './src/**/*.tsx'",
    "lint:staged": "lint-staged && yarn type-check",
    "lint:ts": "eslint . --ext=js,ts,tsx --fix",
    "prerelease": "yarn lint && yarn testonly && yarn build",
    "release": "lerna publish --conventional-commits",
    "start": "yarn docs:dev",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch",
    "type-check": "tsc --build tsconfig.build.json",
    "watch": "yarn type-check -- --watch"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/draft-js": "^0.10.28",
    "@types/jest": "^24.0.5",
    "@types/ramda": "^0.25.50",
    "@types/react": "16.8.3",
    "@types/react-dom": "^16.8.1",
    "@types/react-select": "^2.0.12",
    "@types/styled-components": "4.1.10",
    "@types/styled-system": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-ramda": "^2.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-typescript-to-proptypes": "^0.17.1",
    "cross-env": "^5.2.0",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "eslint": "^5.13.0",
    "eslint-config-yoctol": "^0.21.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.1",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "moment": "^2.24.0",
    "polished": "^2.3.3",
    "prettier": "^1.16.4",
    "prettier-package-json": "^2.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-icons": "^3.4.0",
    "react-spring": "^8.0.7",
    "react-testing-library": "^5.8.0",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "styled-components": "^4.1.3",
    "stylelint": "9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-config-yoctol": "^1.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "ts-jest": "^23.10.5",
    "typescript": "3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
