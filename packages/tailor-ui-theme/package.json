{
  "name": "@tailor-ui/theme",
  "description": "Tailor-UI THeme - Theme for Tailor-UI.",
  "license": "MIT",
  "author": "dev@yoctol.com",
  "homepage": "https://tailor-ui.netlify.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yoctol/tailor-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Yoctol/tailor-ui/issues"
  },
  "version": "0.3.4",
  "main": "lib/index.cjs.js",
  "module": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --config-file ../../babel.config.js ./src --out-dir ./lib --extensions '.ts'",
    "postbuild": "rollup -c ./config/rollup.config.js",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch"
  },
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "dependencies": {
    "polished": "^3.4.4",
    "styled-normalize": "^8.0.7"
  },
  "peerDependencies": {
    "styled-components": ">=5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
