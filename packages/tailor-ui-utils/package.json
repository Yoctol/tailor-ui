{
  "name": "@tailor-ui/utils",
  "version": "0.0.0",
  "description": "Tailor-UI Utils - Utility functions for Tailor-UI.",
  "author": "jigsawye <jigsaw.ye@gmail.com>",
  "homepage": "https://tailor-ui.netlify.com/",
  "license": "MIT",
  "main": "lib/index.cjs.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yoctol/tailor-ui.git"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "yarn build:types && yarn build:cjs && yarn build:esm",
    "build:types": "tsc --build",
    "build:cjs": "rollup -c scripts/rollup.config.js",
    "build:esm": "cross-env NODE_ENV=production babel --config-file ../../babel.config.js ./src --out-dir ./lib --extensions '.ts' --ignore **/__tests__,**/**/__tests__",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand",
    "testonly:watch": "jest --watch",
    "type-check:watch": "yarn build:types -- --watch"
  },
  "bugs": {
    "url": "https://github.com/Yoctol/tailor-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "rollup-plugin-commonjs": "^9.2.2"
  }
}
